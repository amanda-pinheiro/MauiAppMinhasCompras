<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="Relatório" Clicked="ToolbarItem_Clicked_2"/>
        <ToolbarItem Text="Adicionar Novo Produto"  Clicked = "ToolbarItem_Clicked" />
        
    </ContentPage.ToolbarItems>
    
    
    <StackLayout>
        <SearchBar x:Name="txt_search" 
                   Placeholder="Busca de Produtos"
                   TextChanged="txt_search_TextChanged"
                   Margin="10,0,10,0"
                   />
        
        <Picker x:Name="pickerCategoria" 
                Title="Selecione uma categoria" 
                SelectedIndexChanged="pickerCategoria_SelectedIndexChanged"
                Margin="10,5" />
        
        <Frame Padding="0" Margin="10" VerticalOptions="FillAndExpand">
            <ListView x:Name="lst_produtos" 
                      IsPullToRefreshEnabled="True"
                      Refreshing="lst_produtos_Refreshing"
                      ItemSelected="lst_produtos_ItemSelected">

                <ListView.Header>
                    <Grid ColumnDefinitions="30,100,80,50,100,90"
                          BackgroundColor="{StaticResource Gray100}">
                        <Label Grid.Column="0" Text="ID" Padding="5,0,0,0"/>
                        <Label Grid.Column="1" Text="Descrição" />
                        <Label Grid.Column="2" Text="Preço" />
                        <Label Grid.Column="3" Text="Qnt" />
                        <Label Grid.Column="5" Text="Total"/>
                        <Label Grid.Column="4" Text="Categoria"/>

                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover" Clicked="MenuItem_Clicked"/>
                            </ViewCell.ContextActions>
                            <Grid ColumnDefinitions="30,100,80,50,100,90">
                                <Label Grid.Column="0" Text="{Binding Id}" Padding="5,0,0,0"/>
                                <Label Grid.Column="1" Text="{Binding Descricao}" />
                                <Label Grid.Column="2" Text="{Binding Preco, StringFormat='{}{0:c}'}"/>
                                <Label Grid.Column="3" Text="{Binding Quantidade}"/>
                                <Label Grid.Column="5" Text="{Binding Total,StringFormat='{}{0:c}'}"/>
                                <Label Grid.Column="4" Text="{Binding Categoria}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>
        </Frame>
        
    </StackLayout>
</ContentPage>